// Prisma Schema untuk Form Builder
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// ============================================
// USER & AUTHENTICATION
// ============================================

enum UserRole {
  ADMIN
  USER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  forms     Form[]
  responses Response[]

  @@map("users")
}

// ============================================
// FORM MANAGEMENT
// ============================================

model Form {
  id          String   @id @default(uuid())
  title       String
  description String?
  isPublished Boolean  @default(false)
  headerImage String?  // URL for header banner image
  logoUrl     String?  // URL for form logo/avatar
  themeColor  String?  @default("#673AB7") // Theme accent color
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Creator
  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id], onDelete: Cascade)

  // Relations
  questions Question[]
  responses Response[]

  @@map("forms")
}

// ============================================
// QUESTIONS
// ============================================

enum QuestionType {
  SHORT_TEXT
  LONG_TEXT
  MULTIPLE_CHOICE
  CHECKBOX
}

model Question {
  id          String       @id @default(uuid())
  formId      String
  title       String
  description String?
  type        QuestionType
  isRequired  Boolean      @default(false)
  order       Int          // untuk sorting order pertanyaan
  options     Json?        // untuk menyimpan pilihan (array) jika type = MULTIPLE_CHOICE atau CHECKBOX
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  form    Form     @relation(fields: [formId], references: [id], onDelete: Cascade)
  answers Answer[]

  @@map("questions")
}

// ============================================
// RESPONSES & ANSWERS
// ============================================

model Response {
  id          String   @id @default(uuid())
  formId      String
  responderId String?  // nullable jika anonymous
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  form       Form     @relation(fields: [formId], references: [id], onDelete: Cascade)
  responder  User?    @relation(fields: [responderId], references: [id], onDelete: SetNull)
  answers    Answer[]

  @@map("responses")
}

model Answer {
  id         String   @id @default(uuid())
  responseId String
  questionId String
  value      Json     // flexible untuk berbagai tipe jawaban (string, array untuk checkbox, dll)
  createdAt  DateTime @default(now())

  // Relations
  response Response @relation(fields: [responseId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([responseId, questionId]) // satu response hanya boleh 1 jawaban per question
  @@map("answers")
}
